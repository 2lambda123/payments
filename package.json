{
  "name": "unicornfinance",
  "version": "0.1.0",
  "private": true,
  "description": "Our goal is to create re-usable sample apps that external developer can leverage as reference.",
  "scripts": {
    "start:prod": "NODE_ENV=production nodemon server/index.js",
    "start": "NODE_ENV=development node server/index.js",
    "build": "cd client && yarn install && yarn run build",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test:e2e": "concurrently \"yarn run dev\" \"wait-on http-get://localhost:3000 && yarn run cy:open\" --kill-others --success first",

    "client": "cd client && yarn start",
    "server": "NODE_ENV=development nodemon server/index.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\" --sucess"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jpmorganchase/demo-wholesale-payments-app.git"
  },
  "dependencies": {
    "concurrently": "6.2.0",
    "cypress": "7.6.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "wait-on": "6.0.0"
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "nodemon": "^2.0.9"
  }
}
